{% extends 'base.html.twig' %}


{% block title %}Série n°{{ program.id }}
{% endblock %}


{% block body %}

	<div class="media">

		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

		<div class="media-body">

			<h1 class="mt-0">{{ program.title }}</h1>

			<p>{{ program.synopsis }}</p>

			<p>Catégorie :
				{{ program.category.name }}</p>

			<strong>Acteurs :</strong>

			<ul>

				{% for actor in program.actors %}

					<li><a href="{{ path("actor_show", { 'id': actor.id }) }}">- {{ actor.name }}</a></li>

				{% else %}

					<li>Aucun acteur pour cette série</li>

				{% endfor %}

			</ul>

		</div>

		{% for season in program.season %}

			<p>Saison :
				{{ season.number }}</p>
			<p>Année :
				{{ season.year }}</p>
			<p>Résumé :
				{{ season.description }}</p>

			{# Lien vers la fiche de la saison : #}
			<a href="{{ path("program_season_show", {"program": program.id, "season": season.id })}}">Voir le détail de la saison.</a>

		{% endfor %}

	</div>


	<a href="{{ path('program_index') }}">

		Retour à la liste des programmes

	</a>

{% endblock %}
