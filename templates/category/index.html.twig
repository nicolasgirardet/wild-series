{% block title %}All categories
{% endblock %}


{% block body %}

	<h1>Toutes les catégories disponibles :
	</h1>

	{% for category in categories %}

		<div>

			<h2>{{ loop.index }}
				/
				{{ category.name }}</h2>


			{# Lien vers la fiche de la série : #}
			{#<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>#}

		</div>

	{% else %}

		Aucune catégorie trouvée.

	{% endfor %}


	<a href="{{ path('app_index') }}">

		Retour à l'accueil

	</a>

{% endblock %}
